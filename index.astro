        If you see an account that isn’t expanding — that’s not a problem, it’s an opportunity.
        </p>
      </div>
    </section>

  </div>
</div>

<div class="nav-dots" id="navDots"></div>

<script>
const slides = document.getElementById('slides');
const sections = document.querySelectorAll('section');
const navDots = document.getElementById('navDots');

let currentIndex = 0;

sections.forEach((_, index) => {
  const dot = document.createElement('div');
  dot.classList.add('dot');
  if(index === 0) dot.classList.add('active');
  dot.addEventListener('click', () => goToSlide(index));
  navDots.appendChild(dot);
});

const dots = document.querySelectorAll('.dot');

function updateDots() {
  dots.forEach(dot => dot.classList.remove('active'));
  dots[currentIndex].classList.add('active');
}

function goToSlide(index) {
  currentIndex = Math.max(0, Math.min(index, sections.length - 1));
  slides.style.transform = `translateY(-${currentIndex * 100}vh)`;
  updateDots();
}

document.addEventListener('keydown', e => {
  if(e.key === 'ArrowDown' || e.key === 'ArrowRight') goToSlide(currentIndex + 1);
  if(e.key === 'ArrowUp' || e.key === 'ArrowLeft') goToSlide(currentIndex - 1);
});

let mouseTimer;
document.addEventListener('mousemove', () => {
  navDots.classList.add('visible');
  clearTimeout(mouseTimer);
  mouseTimer = setTimeout(() => {
    navDots.classList.remove('visible');
  }, 2000);
});
</script>

</body>
</html>
